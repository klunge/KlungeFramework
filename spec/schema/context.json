{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/klunge/KlungeFramework/blob/master/spec/schema/context.json",
  "title": "Klunge Event Context",
  "description": "Klunge Event Context Schema",
  "type": "object",
  "properties": {
    "opId": {
      "type": "string",
      "description": "Operation Id initially given while invoking command"
    },
    "parentOpId": {
      "type": "string",
      "description": "Parent Operation Id for nested invocations"
    },
    "commandContext": {
      "type": "string",
      "description": "Name of Initial Command"
    },
    "commandTimeout": {
      "type": "integer",
      "description": "Timeout in Milliseconds, After this timeout Operation will be assumed as finalized"
    },
    "startTime": {
      "type": "integer",
      "description": "Reference starting time of Operation"
    }
  },
  "required": [
    "opId",
    "commandContext",
    "commandTimeout",
    "startTime"
  ]
}